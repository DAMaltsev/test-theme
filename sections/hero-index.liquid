{% include 'hero' %}

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Background Image"
    },
    {
      "type": "text",
      "id": "desktop_video",
      "label": "Desktop Background Video (Optional)",
      "info": "If video is desired, please upload the first frame of the video to Desktop Background Image. Format should be a direct link to the mp4 from the files section."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_bleed",
      "label": "Full Bleed?",
      "default": true
    },
    {
      "type": "select",
      "id": "text_horizontal_alignment",
      "label": "Text Horizontal Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_vertical_alignment",
      "label": "Desktop Text Vertical Alignment",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "mobile_text_vertical_alignment",
      "label": "Mobile Text Vertical Alignment",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "hero_size",
      "label": "Hero Size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Heading Text Size",
      "options": [
        {
          "value": "h3",
          "label": "Small"
        },
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        }
      ],
      "default": "h2"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description/Accent Color"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text Color Scheme",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "container_size",
      "label": "Constrain hero text to small container?"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "",
          "label": "Yellow"
        },
        {
          "value": "teal",
          "label": "Teal"
        },
        {
          "value": "orange",
          "label": "Orange"
        }
      ],
      "default": ""
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "accent_text",
      "label": "Accent Text"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "info": "If button text is blank and link is included, all text will be linkable"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    }
  ]
}
{% endschema %}
