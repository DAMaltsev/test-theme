    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color"
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
