<section class="custom-section-1" id="{{section.id}}">
  <div class="section-wrapper">
    <div class="container">
      <div class="sec-1-left-part">
        {% if section.settings.heading_tag != blank %}
        <h1 class="heading">{{section.settings.heading_tag}}</h1>
        {% endif %}
        {% if section.settings.sub_heading != blank %}
        <h2 class="subheading">{{section.settings.sub_heading}}</h2>
        {% endif %}
        <div class="below-headings">
          {% if section.settings.list_headings != blank %}
          {% assign listings = section.settings.list_headings | split:"||" %}
          {% if listings.size > 0 %}
          <div class="checklist-area">
            <ul class="checklist-ul">
              {% for list in listings %}
              <li>{{list}}</li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
          {% endif %}
          {% if section.settings.but_1 != blank %}
          <div class="button-area">
            <span class="button-wrapper">
              {% if section.settings.banner_call_to_action != blank %}
              <a href="{{ section.settings.banner_call_to_action }}" class="scroll elButton">
                {% endif %}
                <span>{{section.settings.but_1}}</span>
                {% if section.settings.banner_call_to_action != blank %}
              </a>
              {% endif %}
            </span>
          </div>
          {% endif %}

          <div class="featured-on-area">
            <div class="title">{{section.settings.title-1}}</div>
            <div class="featured-images">
              <ul>
                {% if section.settings.image-1 != blank %}
                <li>
                  <img src="{{section.settings.image-1 | img_url: 'large'}}">
                </li>
                {% endif %}
                {% if section.settings.image-2 != blank %}
                <li>
                  <img src="{{section.settings.image-2 | img_url: 'large'}}">
                </li>
                {% endif %}
                {% if section.settings.image-3 != blank %}
                <li>
                  <img src="{{section.settings.image-3 | img_url: 'large'}}">
                </li>
                {% endif %}
                {% if section.settings.image-4 != blank %}
                <li>
                  <img src="{{section.settings.image-4 | img_url: 'large'}}">
                </li>
                {% endif %}
                {% if section.settings.image-5 != blank %}
                <li>
                  <img src="{{section.settings.image-5 | img_url: 'large'}}">
                </li>
                {% endif %}
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="sec-1-right-part">
        {% if section.settings.right_img_1 != blank %}
        <img src= "{{section.settings.right_img_1 | img_url: 'large' }}">
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
