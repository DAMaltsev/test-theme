"id": "but_1",
"label": "Button"
},
{
"type": "url",
"id": "banner_call_to_action",
"label": "Banner button link"
},
{
"type": "text",
"id": "title-1",
"label": "Title"

},
{
"type": "image_picker",
"id": "image-1",
"label": "Image(1)"
},
{
"type": "image_picker",
"id": "image-2",
"label": "Image(2)"
},
{
"type": "image_picker",
"id": "image-3",
"label": "Image(3)"
},
{
"type": "image_picker",
"id": "image-4",
"label": "Image(4)"
},
{
