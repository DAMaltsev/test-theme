{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/yellow-leaf-hammocks-2.myshopify.com/products/configure/165038/edit
{% endcomment %}
{% if product.metafields.custom_fields["product_accordions"] != blank %}
  <div class="custom-field custom-field__product-accordions custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Accordions</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign accordion_icon_array = product.metafields.custom_fields["accordion_icon"] | split: separator %}
      {% assign accordion_title_array = product.metafields.custom_fields["accordion_title"] | split: separator %}
      {% assign accordion_content_array = product.metafields.custom_fields["accordion_content"] | split: separator %}
      {% assign accordion_image_array = product.metafields.custom_fields["accordion_image"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["product_accordions"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__accordion-icon">
            {{ accordion_icon_array[index] }}
          </div>
          <div class="fc-field field__accordion-title">
            {{ accordion_title_array[index] }}
          </div>
          <div class="fc-field field__accordion-content">
            {{ accordion_content_array[index] }}
          </div>
          <div class="fc-field field__accordion-image">
            {{ accordion_image_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}