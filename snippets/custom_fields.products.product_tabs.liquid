  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/yellow-leaf-hammocks-2.myshopify.com/products/configure/164349/edit
{% endcomment %}
{% if product.metafields.custom_fields["product_tabs"] != blank %}
  <div class="custom-field custom-field__product-tabs custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Tabs</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign tab_title_array = product.metafields.custom_fields["tab_title"] | split: separator %}
      {% assign tab_content_array = product.metafields.custom_fields["tab_content"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["product_tabs"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item--tab fc-index--{{ index }}">
          <div class="fc-field field__tab-title">
            {{ tab_title_array[index] }}
          </div>
          <div class="fc-field field__tab-content">
            {{ tab_content_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}